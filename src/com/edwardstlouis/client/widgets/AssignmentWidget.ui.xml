<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel ui:field="widget" styleName="key-color">
		<g:HorizontalPanel width="100%">
            <g:HTML styleName="rotate month">
                MAR '13
            </g:HTML>
			<g:HTMLPanel width="100%" styleName="margin-left-right extra-left-margin">
				<g:HTML styleName="small-text">Assigned Family:</g:HTML>
				<g:HTML ui:field="family">St. Louis, Ed and Laura</g:HTML>
			</g:HTMLPanel>
			<g:HTMLPanel width="100%" styleName="margin-left-right">
				<g:HTML styleName="small-text">Visited?</g:HTML>
                <g:RadioButton ui:field="visitedYes" name="radioVisited" text="Yes"></g:RadioButton>
                <g:RadioButton name="radioVisited" text="No" ui:field="visitedNo"/>
			</g:HTMLPanel>
			<g:HTMLPanel width="100%" styleName="margin-left-right">
				<g:HTML styleName="small-text">Comments (optional):</g:HTML>
				<g:TextArea styleName="resize-vertical" text="Comments" ui:field="comments" width="88%"/>
			</g:HTMLPanel>
			<g:Button width="100%" styleName="accept-button" ui:field="saveButton">
				Save
			</g:Button>
		</g:HorizontalPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 