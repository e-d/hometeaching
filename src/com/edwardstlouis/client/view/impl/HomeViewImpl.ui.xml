<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel height="100%">
		<g:HTMLPanel ui:field="applicationShell"/>
		
		<g:HTMLPanel ui:field="content" styleName="page">
			<g:HTMLPanel styleName="align-content" ui:field="sectionName"></g:HTMLPanel>
			<div style="width:94%" class="content-background float-left">
				<g:HTMLPanel ui:field="loadingMessage" styleName="loading-message">
					<g:Image url="images/wait.gif"></g:Image>
					Loading...
				</g:HTMLPanel>
				<g:FlowPanel ui:field="contentHolder" width="100%" height="360px" styleName="scroll-content">
				</g:FlowPanel>
			</div>
		</g:HTMLPanel>

	</g:HTMLPanel>
</ui:UiBinder>